    {% for property in properties %}
        <div class="card text-white bg-primary m-1 col-4">
            <div class="card-header">{{ property.city }}</div>
            <div class="card-body">
                <h4 class="card-title"><a href="{{ path('property_read', {id: property.id}) }}">{{ property.title }}</a>
                </h4>
                <h5 class="card-title">{{ property.formattedPrice }} â‚¬</h5>
                <p class="card-text">{{ property.description|u.truncate(50, '...') }}.</p>
            </div>
        </div>
    {% endfor %}
</article>
